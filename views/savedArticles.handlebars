<link rel="stylesheet" href="./css/style.css">


<div class=" container">
    <div class="row">
        <div class="col-sm-12">
            <div class="">

            </div>
            {{#each articlesData}}
            <li class="list-group-item">
                <a href="https://www.nashvillescene.com/{{this.link}}">
                    <h3>{{this.title}}</h3>
                </a>
                <p>{{this.summary}}</p>

                <button data-id={{this.id}} class="removeBtn">Remove Article</button>
                <button data-id={{this.id}} class="add-notes">Add Note</button>
            </li>

            {{!-- code from video --}}

            <div class="row">
                <h3 class="card">{{article.title}}</h3>
                <h5 class="card-panel articleBody">{{body}}</h5>
            </div>

            <div class="row">
                <div class="col s2"></div>
                <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
                    <h5>Comment on this Article</h5>
                    <div class="row">
                        {{!-- <div class="input-field">
                            <i class="material-icons prefix">perm_identity</i>
                            <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
                        </div> --}}

                        <div class="input-field">
                            <i class="material-icons prefix">Comment:</i>
                            <input id="icon_telephone" type="text" placeholder="" name="comment"
                                class="validate active">
                        </div>

                    </div>
                    <div class="row">
                        <div class="input-field">
                            <center><input class="btn add-comment-button topnav" type="submit" value="Submit"></center>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col s2"></div>
                <div class="col s8">
                    <h5>Comments:</h5>
                    {{#if article.comment}}
                    {{#each article.comment}}
                    <div class="card">
                        <p id="nameComment">{{name}}</p>
                        <p>{{body}}<p>
                    </div>
                    {{/each}}
                    {{else}}
                    <p>No Comments Yet.</p>
                    {{/if}}

                </div>
            </div>
